<form action="/planes/<%= @plane.id %>" method="post">
	<input type="hidden" name="_method" value="put">
	<label> Name: </label><input type="text" name="plane[name]" value="<%= @plane.name %>"><br>
	<label> Engine Type: </label><input type="text" name="plane[engine_type]" value="<%= @plane.engine_type %>"><br>
	<label> Description: </label><textarea name="plane[description]"><%= @plane.description %></textarea><br>
	<%= token_tag form_authenticity_token %>

	<button>REFUEL</button>
</form>